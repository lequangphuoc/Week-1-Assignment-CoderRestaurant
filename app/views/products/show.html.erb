<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail">
                <%= image_tag @product.photo, class: 'img-responsive' %>
                <div class="caption-full">
                    <h4 class="pull-xs-right"><%= number_to_currency(@product.price, :locale => :vi) %></h4>
                    <h4><%= @product.name %>
                    </h4>
                    <p><%= @product.description %></p>
                </div>
                <div class="actions">
                    <%= link_to "Add to meal", new_product_order_path(@product), class: "btn btn-warning" %>
                </div>
            </div>

        </div>

    </div>

</div>